datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id        String   @id @default(uuid())
  userId    String
  name      String
  type      String
  balance   Decimal  @db.Decimal(15, 2)
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}